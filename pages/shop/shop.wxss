/* pages/shop/shop.wxss */

page{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.banner,.bann{
  width: 100%;
  height: 400rpx;
}
.slide-image{
  width: 100%;
  height:400rpx;
}
.qi{
  display:flex;
  font-size:26rpx;
  color: #555;
}
.lo{
  width: 100%;
  height: 40rpx;
  line-height:40rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
}
.dui{
  width: 26rpx;
  height:26rpx;
  margin:8rpx 5rpx 0 0;
}
.nav{
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  color: #555;
  font-size: 26rpx;
}
.dd{
  width: 60rpx;
  height: 60rpx;
}
.newUser{
  width: 100%;
  height: 200rpx;
}
.select{
  width: 100%;
  height: 80rpx;
  padding: 0 15rpx;
  box-sizing: border-box;
}
.sele{
  border-left:7rpx solid #666;
  padding: 0 10rpx;
  font-size: 30rpx;
  border-radius: 5rpx;
  color: #444;
}
.song{
  width: 100%;
  height: 230rpx;
  display: flex;
  justify-content: space-around;
  text-align: center;
  color: #555;
  font-size: 32rpx;
}
.song-item{
  width: 30%;

}
.song-img{
  width: 100%;
  height: 230rpx;
}
.footer{
  width: 100%;
  height:100rpx;
  background: #F7F9FA;
  display: flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
  position:fixed;
  bottom: 0;
  left:0;
  color: #555;
}
.img{
  width: 50rpx;
  height: 45rpx;
}
.foot-dd{
  font-size: 30rpx;
}